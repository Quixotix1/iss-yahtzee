package Yahtzee;

public class scoring {
   public static void main(String[] args){ 

   }
   
   public static boolean[][] updateArrays(boolean[] possible, boolean[] taken, int newTaken){
       for (int i = 0; i < possible.length; i++){
           possible[i] = true;
       }
       taken[newTaken] = false;
       boolean[][] arrays = {possible, taken};
       return arrays; 
   }
   public static int justNumbers(ArrayList<Integer> diceArray, int x){
     int count = 0;
     for(int i = 0; i < 5; i++){
       if(diceArray[i] == x){
          count += 1; 
       } 
     }
     int score = count * x;
     return score;
   }
   public static int checker(String x){
     if (x.equals("full house")){
        return 25; 
     }  
     else if (x.equals("small straight")){
        return 30;
     }
     else if (x.equals("large straight")){
        return 40; 
     }
     return 0;
   }
   public static int addAll(ArrayList<Integer> diceArray){
       int score = 0;
       for(int i = 0; i < 5; i++){
           score += diceArray[i];
       }
       return score;
   }
   public static int yahtzee(int yScore){//yScore should change to the yahtzee element of the score array
      if (yScore >= 50){//bonus
          yScore += 100;
       }
       else if (yScore == 0){
           yScore += 50;
       }
       return yScore;
       
   }
   
}
